<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>ManagerController</servlet-name>
        <servlet-class>za.ac.tut.tut.controller.ManagerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUpdateProdsController</servlet-name>
        <servlet-class>za.ac.tut.tut.controller.GetUpdateProdsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerController</servlet-name>
        <servlet-class>za.ac.tut.tut.controller.CustomerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndSessionController</servlet-name>
        <servlet-class>za.ac.tut.tut.controller.EndSessionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerController</servlet-name>
        <url-pattern>/ManagerController.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUpdateProdsController</servlet-name>
        <url-pattern>/GetUpdateProdsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerController</servlet-name>
        <url-pattern>/CustomerController.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndSessionController</servlet-name>
        <url-pattern>/EndSessionController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
